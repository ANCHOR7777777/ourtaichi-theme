<div class="section-testimonials">
  <div class="page-width">
    <h2 class="h2_">{{ section.settings.heading | escape }}</h2>
    <div class="testimonials-scroller">
      {%- if section.blocks.size > 0 -%}
        {%- for block in section.blocks -%}
          <div class="testimonial-card" {{ block.shopify_attributes }}>
            {%- if block.settings.avatar != blank -%}
              <img
                src="{{ block.settings.avatar | image_url: width: 100 }}"
                alt="{{ block.settings.author }}"
                loading="lazy"
                width="50"
                height="50"
              >
            {%- endif -%}
            <p>"{{ block.settings.content }}"</p>
            <cite>- {{ block.settings.author }}</cite>
            <div class="rating" role="img" aria-label="Rating: {{ block.settings.rating }} out of 5 stars">
              {%- for i in (1..5) -%}
                <span
                  class="rating-star"
                  aria-hidden="true"
                  style="color: {{ i <= block.settings.rating ? 'gold' : 'gray' }};"
                  >&#9733;</span
                >
              {%- endfor -%}
            </div>
          </div>
        {%- endfor -%}
      {%- else -%}
        {%- for i in (1..3) -%}
          <div class="testimonial-card">
            <p>"This is a placeholder testimonial. You can add real ones in the theme editor."</p>
            <cite>- Placeholder Author</cite>
          </div>
        {%- endfor -%}
      {%- endif -%}
    </div>
  </div>
</div>

<style>
  .section-testimonials .testimonials-scroller {
    display: grid;
    grid-auto-flow: column;
    grid-auto-columns: 80%;
    gap: 1rem;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    padding: 1rem;
  }
  .section-testimonials .testimonial-card {
    scroll-snap-align: start;
    border: 1px solid rgba(0, 0, 0, 0.1);
    padding: 1.5rem;
    border-radius: 8px;
  }
  .section-testimonials .testimonial-card img {
    border-radius: 50%;
    margin-bottom: 1rem;
  }
  @media screen and (min-width: 750px) {
    .section-testimonials .testimonials-scroller {
      grid-auto-columns: 32%;
    }
  }
</style>

{% schema %}
{
  "name": "Testimonials",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Let customers speak for us"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "image_picker",
          "id": "avatar",
          "label": "Author Avatar"
        },
        {
          "type": "text",
          "id": "author",
          "label": "Author",
          "default": "John Doe"
        },
        {
          "type": "textarea",
          "id": "content",
          "label": "Content",
          "default": "This is a great product!"
        },
        {
          "type": "range",
          "id": "rating",
          "min": 1,
          "max": 5,
          "step": 1,
          "label": "Rating",
          "default": 5
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Testimonials"
    }
  ]
}
{% endschema %}
